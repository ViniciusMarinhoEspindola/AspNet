
@model SistemaDeAtendimento.Models.ChatViewModel
@{
    ViewBag.Title = "Chat";
}
<h2 class="text-center mt-3">Chat com o consultor</h2>

<div id="msg"></div>
<div class="container">
    <div class="row">

        <p id="Nome"></p>
        <div class="col-12 my-5" style="height: 70vh; border-left: 2px solid gray; border-right: 2px solid gray; border-top: 2px solid gray; border-bottom: 2px solid gray;">
            <div id="discussion" style="height: 60vh; overflow:auto;">
            </div>
            <div id="digitando" style="position: absolute; bottom:15px;"></div>
            <div class="ml-5" style="position: absolute; bottom:-20px; width:100%">
                <div class="form-row">
                    <!-- Input cadastrar mensagem -->
                    <input type="text" class="col-9 form-control" id="message" />

                    @using (Html.BeginForm("Upload", "Chat", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data", @id = "form" }))
                    {
                        <!-- Botão carregar arquivo -->
                        <label id="fileLabel" style="height:40px; max-width:50px" class="btn btn-info col-1 py-2 mx-3" for="upload"><i class="fas fa-file-upload"></i></label>
                        @Html.TextBoxFor(m => m.Arq, new { @class = "form-control", type = "file", @id = "upload", @style = "display:none;" })
                        <input type="hidden" name="pathUpl" id="pathUpl" />
                        @*<input type="file" class="col-1 btn btn-warning" id="upload" style="display:none;" />*@
                    }

                    <!-- Botão enviar -->
                    <input type="button" style="height:40px;" class="btn btn-danger py-2 col-1" id="sendmessage" value="Enviar" />

                    <!-- Nome do usuario -->
                    <input type="hidden" id="displayname" />
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        $("#upload").change(function () {
            $("#fileLabel").html("<i class='far fa-thumbs-up'></i>");
        });

        $(function () {
            var chat = $.connection.chatHub;

            $("#pathUpl").val("@ViewBag.IdConversa")
            

            chat.client.addNewMessageToPage = function (name, message) {
                $('#discussion').append('<p><strong>' + name + '</strong>: ' + htmlEncode(message) + '</p>');
            };

            chat.client.addNewLinkFileToPage = function (name, filename, conversa) {
                $('#discussion').append('<p><strong>' + name + '</strong>: <a target="_blank" href="/Chat/Download/?path=' + conversa + '&filename=' + filename + '"><button class="btn btn-outline-info" id="linkDownload">' + filename + '</button></a></p>');
            };

            chat.client.joinGroup = function (name) {
                $('#discussion').append('<p class="text-muted">' + name + '</p>');
            };

            chat.client.digitandoMessage = function (name) {
                $('#digitando').html('<p class="text-muted">' + name + '</p>');
            };

            chat.client.apagarDigitandoMessage = function (name) {
                $('#digitando').html("");
            };

             chat.client.listar = function (msg) {
                $('#msg').html('<p class="text-muted">' + msg + '</p>');
            };


            $('#displayname').val("@ViewBag.Nome");

            $('#message').focus();

            $.connection.hub.start().done(function () {
                chat.server.addToGroup("@ViewBag.GroupId", $('#displayname').val());

                chat.server.chatLink("@ViewBag.GroupId", @ViewBag.IdConversa);

                $('#sendmessage').click(function () {
                    if ($("#upload").val() !== "") {
                        @*chat.server.upload(arq, "@ViewBag.GroupId", "@ViewBag.IdConversa")*@

                        var formData = new FormData($('#form')[0]);
                        $.ajax({
                            url : '/Chat/Upload',
                            type: "POST",
                            data: formData,
                            contentType: false,
                            processData: false,
                            dataType: "JSON",
                            success: function(data){
                                console.log(data);

                                chat.server.upload("@ViewBag.GroupId", $('#displayname').val(), data, @ViewBag.IdConversa, @ViewBag.Consultor)
                            },
                        });
                        $("#upload").val("");
                        $("#fileLabel").html("<i class='fas fa-file-upload'></i>");
                    }
                    if ($('#message').val() !== "") {
                        chat.server.send($('#displayname').val(), $('#message').val(), "@ViewBag.GroupId", @ViewBag.Consultor, @ViewBag.IdConversa);
                    }
                    $('#message').val('').focus();
                });

                $('#message').keypress(function () {
                   chat.server.digite("@ViewBag.GroupId", $('#displayname').val());
                });

                $('#message').blur(function () {
                     chat.server.apagarDigite("@ViewBag.GroupId");
                });
            });
        });

        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
